{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": "tests",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "es2021",
    "noEmit": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
  },
  "exclude": ["node_modules"]
}
