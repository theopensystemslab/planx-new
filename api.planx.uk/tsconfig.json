{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",      
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
