{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
