{
  "parser": "@typescript-eslint/parser",
  "plugins": ["simple-import-sort", "jsx-a11y"],
  "extends": ["plugin:jsx-a11y/recommended"],
  // "plugins": ["simple-import-sort", "jsx-a11y", "testing-library"],
  // "extends": ["plugin:jsx-a11y/recommended", "plugin:testing-library/react"],
  "rules": {
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@material-ui/core",
            "message": "See https://github.com/theopensystemslab/planx-new/pull/140"
          },
          {
            "name": "@material-ui/icons",
            "message": "See https://github.com/theopensystemslab/planx-new/pull/140"
          },
          {
            "name": "jest-axe",
            "message": "Please import axe-helper instead"
          }
        ],
        "patterns": ["@material-ui/*/*/*", "!@material-ui/core/test-utils/*"]
      }
    ]
  }
}
