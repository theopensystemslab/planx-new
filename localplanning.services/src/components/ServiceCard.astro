---
import type { Service } from "@lib/lpa-api";
import { PUBLIC_PLANX_EDITOR_URL } from "astro:env/client";
import Button from "./Button.astro";

type Props = Service;

const { name, slug, summary } = Astro.props;
const { lpa } = Astro.params;

if (!lpa) return;
---

<li class="flex flex-col lg:flex-row clamp-[gap,2,4] clamp-[py,5,8] clamp-[px,4,8] rounded my-4 bg-bg-light w-full justify-between items-start lg:items-center">
  <div class="lg:w-2/3">
    <h3 class="font-semibold mb-2 text-heading-xs">{name}</h3>
    <p class="text-text-secondary text-body-md lg:mb-0">
      {
        summary ||
          "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Similique, voluptatum ipsam."
      }
    </p>
  </div>
  <!-- TODO: custom subdomains -->
  <Button
    href=`${PUBLIC_PLANX_EDITOR_URL}/${lpa}/${slug}/preview`
    variant="primary"
    external
  >
    Start your application
  </Button>
</li>
