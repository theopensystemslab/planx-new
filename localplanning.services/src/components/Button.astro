---
import type { AstroBuiltinAttributes } from "astro";

interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  size?: "small" | "medium" | "large";
  external?: boolean;
  class?: string;
}

const {
  href = "#",
  variant = "primary",
  size = "medium",
  external = false,
  class: className = "",
} = Astro.props;

const variantClasses = {
  primary: "button--primary",
  secondary: "button--secondary",
};

const sizeClasses = {
  small: "text-body-sm py-2 clamp-[px,2,3]",
  medium: "text-body-md clamp-[py,2,3] clamp-[px,3,4]",
  large: "text-body-lg clamp-[py,3,4] clamp-[px,4,5]",
};

const externalClasses = external ? "after:content-['_â†—']" : "";

const classes: AstroBuiltinAttributes["class:list"] = [
  "button",
  variantClasses[variant],
  sizeClasses[size],
  externalClasses,
  className,
];
---

<a href={href} class:list={classes}>
  <slot />
</a>
