---
import Button from "@components/Button.astro";
import Container from "@components/Container.astro";
import { Image } from "astro:assets";
import lpsLogo from "/public/local-planning-services-logo.svg";
import SkipLink from "./a11y/SkipLink.astro";
---

<header class="bg-bg-main">
  <SkipLink />
  <Container>
    <div
      class="flex flex-col lg:flex-row justify-between lg:items-center py-6 gap-4"
    >
      <a href="/">
        <Image
          src={lpsLogo}
          alt="Local planning services logo"
          class="clamp-[w,24,32] text-bg-light"
        />
      </a>
      <nav class="flex items-center clamp-[gap,7,8]">
        <ul class="flex clamp-[gap,6,8]">
          <li>
            <a class="paragraph-link font-semibold text-body-md" href="/"
              >Home</a>
          </li>
          <li>
            <a class="paragraph-link font-semibold text-body-md" href="/search"
              >Find services</a>
          </li>
          <li>
            <a class="paragraph-link font-semibold text-body-md" href="/directory"
              >Directory</a>
          </li>
          <li>
            <a class="paragraph-link font-semibold text-body-md" href="/about"
              >About</a>
          </li>
        </ul>
        <Button href="/applications" variant="secondary" size="small"
          >Your applications</Button
        >
      </nav>
    </div>
  </Container>
</header>
