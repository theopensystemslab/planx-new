{
    acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
    
    email {$TLS_EMAIL}
    
    log {
        level DEBUG
        output stdout
        format console
    }
}

api.{$ROOT_DOMAIN} {
    tls {
        dns vultr {$VULTR_API_KEY}
        resolvers 1.1.1.1 8.8.8.8 208.67.222.222 208.67.220.220
    }
    
    reverse_proxy api:{$API_PORT}
    
    log {
        output stdout
        format console
        level DEBUG
    }
}